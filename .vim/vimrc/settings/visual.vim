" 非表示
" ツールバー
set guioptions-=T
" メニューバー
set guioptions-=m
" 右スクロールバー
set guioptions+=R
" エラーによる画面点滅
set vb t_vb=


" 表示
" 入力中のコマンド
set showcmd
" 行番号
set number
" タイトル
set title
" 現在の行
set cursorline
" 現在の行
set cursorcolumn
" 括弧入力時の対応する括弧
set showmatch
" ステータスライン
set laststatus=2
" カーソル位置
set ruler
" ウィンドウの最後の行
set display=lastline
" 検索語
set hlsearch


" スキーム
" Vimは暗い背景によく合う色を使う
set background=dark
" カラーテーマ
colorscheme codedark
" シンタックスハイライトの有効化
syntax enable
